<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".OneFragment"
            android:columnCount="1"
            android:layout_gravity="center">

        <Space android:layout_rowWeight="1"/>

        <EditText android:layout_gravity="fill"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:inputType="textPersonName"
                  android:text=""
                  android:ems="10"
                  android:id="@+id/editText"/>

        <Space android:layout_rowWeight="1"/>

        <Button android:layout_gravity="fill"
                android:text="Shared Preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSharedPreferences"/>

        <Button android:text="Bundle"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBundle"/>

        <Button android:text="Singleton"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSingleton"/>

        <Space android:layout_rowWeight="1"/>

</GridLayout>